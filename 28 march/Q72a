// 72.A Write a C program to remove any negative sign in front of a number.  
// Input a value (negative):
// Original value = -253
// Absolute value = 253

#include<stdio.h>

int main() {
    int num, abs_num;
    
    printf("Enter a value (negative): ");
    scanf("%d", &num);
    
    // Removing the negative sign
    abs_num = num < 0 ? -num : num;
    
    printf("Original value = %d\n", num);
    printf("Absolute value = %d", abs_num);
    
    return 0;
}

