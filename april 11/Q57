// 57. Write a program in C to print a string in reverse order.  
// Test Data :
// Input a string to reverse : Welcome
// Expected Output :
// Reversed string is: emocleW

#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, len;

    printf("Enter a string: ");
    scanf("%s", str);

    len = strlen(str);
    printf("length of a string is = %d\n",len);

    printf("Reverse of the string: ");
    for(i = len - 1; i >= 0; i--) {
        printf("%c", str[i]);
    }

    return 0;
}
